<h1>Admin Page: Pending User Approvals</h1>

<p>There are <strong><%= @admin_count %></strong> users pending approval.</p>

<% @admins.each do |user| %>
    <div class="col-md-4 mb-4">
      <div class="card h-100 shadow-sm">
        <div class="card-body d-flex flex-column">
          <h5 class="card-title text-primary"><%= user.email %></h5>
          <p class="card-text text-muted mb-4">Approval request pending...</p>
          <div class="mt-auto">
            <%= form_with(url: approve_user_path(user), method: :patch, local: true, class: 'd-inline-block mr-2') do %>
              <%= submit_tag 'Approve', class: "btn btn-outline-success", data: { confirm: 'Are you sure you want to approve this user?' } %>
            <% end %>
            <%= form_with(url: rejected_user_path(user), method: :patch, local: true, class: 'd-inline-block') do %>
              <%= submit_tag 'Reject', class: "btn btn-outline-danger", data: { confirm: 'Are you sure you want to reject this user?' } %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>